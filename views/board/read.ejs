    <% } %>
  </table><br />
<% } %>


  <!-- Leave comments -->
  <div>
    <form action="../comment/<%=rows[0].idx %>" method="post">

      <input type="text" name="cmtWriter" placeholder="name" value="" required/><br /><br />
      <select name="cmtlang">
        <option value="en">
         Default: English
        </option>
        <option value="ko">kor</option>
        <option value="ja">jpn</option>
        <option value="zh-TW">zh-traditional</option>
        <option value="zh-CN">zh-simplified</option>
      </select><br /><br />
      <textarea rows=5 cols=66 name="cmt" required></textarea><br />
      <input type="password" placeholder="password" name="cmtPwd" required/>
      <input type="submit" class="btn btn-default" value="Leave Comments" /><br />
    </form><br />
