<html>
<head>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Mall-Admin</title>
<script type="text/javascript">
$(document).ready(function(){

   $("#submit").click(function(){
      var itemName = $("#itemName").val();
      alert(itemName + " uploaded");
   });

});

</script>
<style type="text/css">
   h1{
   color:red;
   }
</style>
</head>
<body>

<div class="container">
   <h1><span class="glyphicon glyphicon-cog"></span>  Admin mode</h1>
   <div>
   <h2><button data-target="#modal1" data-toggle="modal"><span class="glyphicon glyphicon-open"> Item Upload</sapn></button></h2>
   <h2><button data-target="#modal2" data-toggle="modal"><span class="glyphicon glyphicon-lg glyphicon-tags"> Order List</sapn></button></h2>
   </div>

     <div id="modal1" class="modal">
         <div class="modal-dialog modal-lg">
             <div class="modal-content">
                <div class="modal-header">
                   <button class="close" data-dismiss="modal">x</button>
                   <h1>Admin - Item Upload</h1>
                   </div>
                     <div class="modal-body">
                  <form action = "itemUp" method="post" enctype="multipart/form-data">
                     <div class="form-group">
                        <label class="control-label col-sm-2">itemName:</label>
                           <div class="col-sm-10">
                              <input class="form-control" placeholder="itemName" type="text" id="itemName" name="itemName">
                           </div>
                     </div>
                     <div class="form-group">
                        <label class="control-label col-sm-2">itemPrice:</label>
                           <div class="col-sm-10">
                              <input class="form-control" placeholder="itemPrice" type="text" id="itemPrice" name="itemPrice">
                           </div>
                     </div>
                     <div class="form-group">
                        <label class="control-label col-sm-2">itemType:</label>
                           <div class="col-sm-10">
                              <select name="itemType" class="form-control">
                                 <option name="type" selected disabled>type
                                 <option name="nutritions" value="nutritions">nutritions
                                 <option name="gears" value="gears">gears
                                 <option name="others" value="others">others
                              </select>
                           </div>
                     </div>

                     <div class="form-group">
                        <label class="control-label col-sm-2">itemUse:</label>
                           <div class="col-sm-10">
                              <select name="itemUse" class="form-control">
                                 <option name="itemUse" selected disabled>use
                                 <option name="diet" value="diet">diet
                                 <option name="strength" value="strength">strength
                                 <option name="others" value="others">others
                              </select>
                           </div>
                     </div>

                     <div class="form-group">
                        <label class="control-label col-sm-2">itemStock:</label>
                           <div class="col-sm-10">
                              <input class="form-control" placeholder="itemStock" type="text" id="itemStock" name="itemStock">
                           </div>
                     </div>

                     <div class="form-group">
                        <label class="control-label col-sm-2">itemDesc:</label>
                           <div class="col-sm-10">
                              <textarea rows="10" class="form-control" placeholder="itemDesc" type="text" id="itemDesc" name="itemDesc"></textarea>
                           </div>
                     </div>

                     <div class="form-group">
                        <label class="control-label col-sm-2">itemImg:</label>
                           <div class="col-sm-10">
                              <input type="file" class="form-control" placeholder="itemImg"  id="itemImg" name="itemImg">
                           </div>
                     </div>

                     <div class="form-group inline">
                        <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-info" type="submit" name="submit" id="submit">submit</button>
                        <a class="btn btn-default" href="/work/mall">back</a>
                        <a class="btn btn-default" href="/work/mall/products">Check</a>
                        </div>
                     </div>
                  </form>
                     <div class="modal-footer">
                  </div>
                     </div>
               </div>
            </div>
           </div>

<!-- orderlist -->
    <div id="modal2" class="modal">
         <div class="modal-dialog modal-lg">
             <div class="modal-content">
                <div class="modal-header">
                  <button class="close" data-dismiss="modal">x</button>
                   <h1>Order List</h1>
                </div>
             <div class="modal-body">
             <c:forEach var="a" items="${aList}">
               <p>   user: ${a.orderListName} </p>
               <p>   orderNo: ${a.orderNo} </p>
               <p>   Date: ${a.orderDate} </p>
               <p>   itemName: ${a.itemName} </p>
               <p> status: ${a.status}</p>
               <p> ------------------ </p>
             </c:forEach>
               </div>
         </div>
      </div>
   </div>


   <a href="../mall"><button class="btn btn-default">Back</button></a>
</div>
</div>
</body>
</html>
