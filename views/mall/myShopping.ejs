<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<title>My Shopping List</title>
<style type="text/css">
	.shoppinglist{
	overflow:scroll;
	}
	.eachItem{
	border: 1px solid black;
	}
</style>
</head>
<body>

<div class="container">
 	<div id="accordion" class="panel-group">
         <div class="panel panel-default">
            <div class="panel-heading">
               <h4 class="panel-title">
            	<h3><strong><%=user.username%></strong> 's shopping List</h3>
                  <a data-parent="#accordion" href="#collapse1" data-toggle="collapse">View all my Shopping List</a>
               </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
               <div class="shoppinglist"><br>

			<%
			for(var i=0;i<results.length;i++){
				var order = results[i];
			%>
			<p><img src = "/<%=order.ITEMIMG%>" style="width:200px;"></p>
						<p>orderNo:		<%=order.ORDERNO%></p>
						<p>itemNo: 		<%=order.ITEMNO%> </p>
						<p>itemName:	<%=order.ITEMNAME%> </p>
						<p>price:    	<%=order.ITEMPRICE%></p>
						<p>quantity:  <%=order.QUANTITY%></p>
						<p>total:    	<%=order.TOTAL%></p>
						<p>address:		<%=order.ADDRESS%></p>
						<p>orderDate:	<%=order.ORDERDATE%></p>
						<p>Status:		<%=order.STATUS%></p>
						<p>------------------------------------------------------------------------------------</p>
		<%	}  %>
								  <br>
               </div>
            </div>
         </div>
	</div>
	<a href="../"><button class="btn btn-default">Back</button></a>
</div>
</body>
</html>
